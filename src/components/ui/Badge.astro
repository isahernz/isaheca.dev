---
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
  label?: string;
}

const { class: className, label } = Astro.props;
---

<span
  class={cn(
    "inline-flex text-nowrap max-w-max items-center gap-x-2 rounded-md border border-neutral-300 bg-neutral-200/50 px-2 py-1 text-xs font-medium text-neutral-700 dark:border-neutral-800 dark:bg-neutral-800/60 dark:text-neutral-300",
    className,
  )}
>
  <slot />
  {label}
</span>
