---
import SocialLink from "@/components/SocialLink.astro";
import { socialLinks } from "@/data/links";
---

<nav
  class="sticky top-0 z-50 mx-auto mb-1 flex w-full max-w-4xl items-center justify-between bg-neutral-100/80 px-8 py-4 backdrop-blur-md dark:bg-neutral-900/80"
>
  <a
    href="/"
    class="text-md flex items-center space-x-2 font-medium tracking-tight opacity-80 transition-opacity duration-150 hover:opacity-100"
  >
    <span>isaheca.dev</span>
  </a>
  <div class="flex items-center gap-x-1">
    {socialLinks.map(link => <SocialLink {...link} />)}
  </div>
</nav>
