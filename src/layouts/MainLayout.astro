---
import { infoSite } from "@/data/info-site";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import "@/styles/global.css";
import { ClientRouter } from "astro:transitions";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title || infoSite.title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta
      name="description"
      content="Welcome to my portfolio personal, here you can find my projects, experience and posts related to my work and my learning journey. âœ¨"
    />

    <meta name="keywords" content="portfolio, personal, projects, experience, posts, learning, journey" />

    <meta property="og:url" content="https://isaheca.dev.vercel.app" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={infoSite.title} />
    <meta property="og:description" content={infoSite.description} />
    <meta property="og:image" content="https://isaheca.dev.vercel.app/og-isadevjs-links.webp" />
    <meta property="og:locale" content="en_US" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@isahernz" />
    <meta name="twitter:creator" content="@isahernz" />
    <meta name="twitter:title" content={infoSite.title} />
    <meta name="twitter:description" content={infoSite.description} />

    <ClientRouter />
  </head>
  <body
    class="min-h-screen scroll-smooth bg-neutral-100 py-4 antialiased selection:bg-neutral-200 dark:bg-neutral-900 dark:text-neutral-50 dark:selection:bg-neutral-700"
  >
    <Navbar />
    <main class="relative mx-auto flex max-w-4xl flex-col px-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
